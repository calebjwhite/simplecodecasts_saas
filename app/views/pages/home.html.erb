<div class="jumbotron text-center">
    <h1>Welcome to Dev Match</h1>
    <h3>A membership site where entrepreneurs can meet developers.</h3>
</div>

<div class="row">
  <% if user_signed_in? %>  
      <div class = "col-md-6">
        <div class = "well">
          <% if current_user.profile %>
              <%= link_to  "Edit Your Profile!", edit_user_profile_path(current_user), class: 'btn btn-info btn-lg btn-block' %></br>
              <%= link_to  "View Your Profile!", user_path(current_user), class: 'btn btn-primary btn-lg btn-block' %>
          <% else %>
              <h4 class= "text-center">Create your profile to share your information with the community!</h4></br>
              <%= link_to  "Create Your Profile!", new_user_profile_path(current_user), class: 'btn btn-primary btn-lg btn-block' %>
          <% end %>      
        </div>
      </div>
      <div class = "col-md-6">
         <div class = "well">
           <h4 class = "text-center">Visit the community to meet developers, investers and entrepreneurs!</h4></br>
               <%= link_to "GO!", "#", class: 'btn btn-success btn-lg btn-block' %> 
         </div> 
      </div>
  <% else %>
    <div class="col-md-6">
        <div class="well">
            <h2 class="text-center">Basic Membership</h2>
            <h4 class="text-center">Sign up for basic access to the community!</h4>
            <br/>
            <br/>
            <%= link_to "Sign up with Basic!", new_user_registration_path(plan: @basic_plan.id), class: 'btn btn-primary btn-lg btn-block' %>
        </div>
    </div>
    <div class="col-md-6">
        <div class="well">
            <h2 class="text-center">Pro Membership</h2>
            <h4 class="text-center">Sign up for the pro account for $10 per month and get access to the community and the contact information of other developers!</br></h4>
            <%= link_to "Sign up with Pro!", new_user_registration_path(plan: @pro_plan.id), class: 'btn btn-success btn-lg btn-block' %>
        </div>
        
    </div>
  <% end %>    
</div>